@model InvoiceCruds.Models.InvoiceDetail

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">

      

        <h4>Create InvoiceDetail</h4>
    </div>
    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <div class="col-md-6">
                <label asp-for="InvoiceNo" class="control-label"></label>
                <input asp-for="InvoiceNo" class="form-control" />
                <span asp-validation-for="InvoiceNo" class="text-danger"></span>
            </div>
                <div class="col-md-6">
                <label asp-for="CustomerName" class="control-label"></label>
                <input asp-for="CustomerName" class="form-control" />
                <span asp-validation-for="CustomerName" class="text-danger"></span>
            </div>
                <div class="col-md-6">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
                <div class="col-md-6">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
                <div class="col-md-6">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
                <div class="col-md-6">
                <label asp-for="Discount1" class="control-label"></label>
                <input asp-for="Discount1" class="form-control" />
                <span asp-validation-for="Discount1" class="text-danger"></span>
            </div>
                <div class="col-md-6">
                <label asp-for="Discount2" class="control-label"></label>
                <input asp-for="Discount2" class="form-control" />
                <span asp-validation-for="Discount2" class="text-danger"></span>
            </div>
                <div class="col-md-6">
                <label asp-for="AddTax" class="control-label"></label>
                <input asp-for="AddTax" class="form-control" />
                <span asp-validation-for="AddTax" class="text-danger"></span>
            </div> 

                <div class="col-md-6">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
                <div class="col-md-6">
                <label asp-for="AreaId" class="control-label"></label>
                @if (ViewBag.AreaId != null)
                {
                    <select asp-for="AreaId" class="form-control" required asp-items="@(new SelectList(ViewBag.AreaId, "Value", "Text"))">
                        <option value="" selected disabled>--Select Area--</option>
                    </select>
                }
                else
                {
                        <select asp-for="AreaId" class="form-control" disabled>
                        <option value="" selected disabled>--No Area Available--</option>
                    </select>
                } 
                <span asp-validation-for="AreaId" class="text-danger"></span>
            </div>
                <div class="col-md-6">
                <label asp-for="BatchNo" class="control-label"></label>
                <input asp-for="BatchNo" class="form-control" />
                <span asp-validation-for="BatchNo" class="text-danger"></span>
            </div>
                <div class="col-md-6">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
                <div class="col-md-6">
                <label asp-for="ExpiryDate" class="control-label"></label>
                <input asp-for="ExpiryDate" class="form-control" />
                <span asp-validation-for="ExpiryDate" class="text-danger"></span>
            </div>
            <div class="d-flex justify-content-between mt-4">

                <div>
                    <a asp-action="Index">Back to List</a>
                </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            </div>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
